<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background"
    xmlns:android="http://schemas.android.com/apk/res/android">
    <ImageView
        android:id="@+id/logo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/logo"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="78dp"/>
    <EditText
        android:id="@+id/operator_id"
        android:layout_below="@id/logo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="38dp"
        android:layout_marginLeft="24dp"
        android:layout_marginRight="24dp"
        android:hint="@string/operator_name"
        android:textSize="16pt"
        android:textColorHint="#ffffff"/>
    <EditText
        android:id="@+id/operator_pwd"
        android:layout_below="@id/operator_id"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:layout_marginLeft="24dp"
        android:layout_marginRight="24dp"
        android:textSize="16pt"
        android:hint="@string/operator_pwd"
        android:textColorHint="#ffffff"/>
    <Button
        android:id="@+id/btn_login"
        android:layout_below="@id/operator_pwd"
        android:layout_width="368dp"
        android:layout_height="42dp"
        android:layout_marginTop="26dp"
        android:layout_marginLeft="24dp"
        android:layout_marginRight="24dp"
        android:layout_centerHorizontal="true"
        android:text="@string/login_name"
        android:textSize="15pt"
        android:textColor="#ffffff"
        android:background="#85FF9900"/>
    <Button
        android:id="@+id/btn_reinit"
        android:layout_below="@id/btn_login"
        android:layout_marginTop="24dp"
        android:text="@string/re_init"
        android:textColor="#ffffff"
        android:textSize="16pt"
        android:layout_alignRight="@id/btn_login"
        android:background="#00000000"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
</RelativeLayout>